<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CouponActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/tbc_logo">

    </de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:textColor="#000000"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="22sp"
        android:text="Your Coupons"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Spinner
        android:id="@+id/spiinerCoupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ListView
        android:id="@+id/listView"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_marginTop="40dp"
        android:visibility="gone"
        android:padding="10dp"
        android:id="@+id/placeHolder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/emptyElement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="No coupons available!\n Play to get some"
        android:textColor="#525252"
        android:textSize="19.0sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/playbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_game_controller" />


    </LinearLayout>
</LinearLayout>