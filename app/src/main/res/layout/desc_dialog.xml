<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="25dp">
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background='@color/colorPrimary'
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_name"
                android:text="@string/abc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="10dp"/>





        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="cursive"
                android:padding="20dp"
                android:id="@+id/textviewDesc"
                android:text="@string/cethosia_cyane_the_leopard_lacewing_is_a_species_of_heliconiine_butterfly_found_from_india_to_southern_china_and_indochina_its_range_has_expanded_in_the_last_few_decades_and_its_arrival_in_the_southern_part_of_the_malay_peninsula_including_singapore_is_relatively_recent"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvSpecific"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold|italic"
                    android:text="Specific Name : "
                    android:textColor="@android:color/holo_blue_bright"/>

                <TextView
                    android:id="@+id/tvSpecificName"
                    android:layout_width="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:layout_height="wrap_content"
                    android:text="Papilio demoleus"/>

            </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="3dp"
               android:orientation="horizontal"
               android:gravity="center">

               <TextView
                   android:id="@+id/rank"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:text="Rank: "
                   android:textColor="@android:color/holo_blue_bright"/>

               <TextView
                   android:id="@+id/rankInput"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="16sp"
                   android:textStyle="italic"
                   android:text="Papilio demoleus"/>

           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/family"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family : "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_blue_bright"/>

                <TextView
                    android:id="@+id/familyInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:text="Papilio demoleus"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="Order : "
                    android:textColor="@android:color/holo_blue_bright"/>

                <TextView
                    android:id="@+id/orderInput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:text="Papilio demoleus"/>

            </LinearLayout>





        </LinearLayout>

        </LinearLayout>



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dialog_icon"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/tbc_logo"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"/>



</RelativeLayout>